{% extends 'base.html.twig' %}

{% block title %}Actualités — Tesla Store{% endblock %}

{% block meta %}
    <meta name="description" content="Découvrez les dernières actualités et articles sur l'automobile électrique, Tesla et la mobilité durable.">
    <meta property="og:title" content="Actualités — Tesla Store">
    <meta property="og:description" content="Découvrez les dernières actualités et articles sur l'automobile électrique, Tesla et la mobilité durable.">
    <meta property="og:type" content="website">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}

{% block body %}
<h1 class="visually-hidden">Actualités — Tesla Store</h1>

<!-- Hero Section -->
<section class="position-relative py-5" style="min-height: 50vh; display: flex; align-items: center; background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1560958089-b8a1929cea89?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80') center/cover fixed;">
    <div class="container position-relative" style="z-index: 2;">
        <div class="row justify-content-center text-center text-white">
            <div class="col-lg-8">
                <h1 class="display-3 fw-bold mb-4 text-shadow">ACTUALITÉS</h1>
                <p class="lead text-shadow mb-4">Découvrez les dernières nouvelles de l'univers Tesla et de l'automobile électrique</p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <span class="badge bg-primary fs-6 px-3 py-2">{{ totalArticles }} articles</span>
                    <span class="badge bg-light text-dark fs-6 px-3 py-2">Mise à jour quotidienne</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Articles mis en avant -->
{% if featuredArticles|length > 0 %}
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold">ARTICLES À LA UNE</h2>
        <div class="row g-4">
            {% for article in featuredArticles %}
            <div class="col-lg-6">
                <article class="card h-100 shadow-sm hover-shadow">
                    <div class="position-relative">
                        <img src="{{ article.image }}" class="card-img-top" alt="{{ article.title }}" style="height: 300px; object-fit: cover;">
                        <div class="position-absolute top-0 start-0 m-3">
                            <span class="badge bg-primary fs-6 px-3 py-2">{{ article.category }}</span>
                        </div>
                        <div class="position-absolute top-0 end-0 m-3">
                            <button class="btn btn-light btn-sm rounded-circle" title="Ajouter aux favoris">
                                <i class="bi bi-heart"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h3 class="card-title h5 fw-bold mb-0">{{ article.title }}</h3>
                        </div>
                        <p class="card-text text-muted flex-grow-1">{{ article.excerpt }}</p>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex align-items-center text-muted small">
                                <i class="bi bi-person me-2"></i>
                                <span>{{ article.author }}</span>
                            </div>
                            <div class="d-flex align-items-center text-muted small">
                                <i class="bi bi-calendar me-2"></i>
                                <span>{{ article.date|date('d/m/Y') }}</span>
                            </div>
                        </div>
                        <div class="mb-3">
                            {% for tag in article.tags %}
                            <span class="badge bg-light text-dark me-1 mb-1">{{ tag }}</span>
                            {% endfor %}
                        </div>
                        <a href="{{ path('app_article_detail', {'id': article.id}) }}" class="btn btn-dark hover-scale">Lire l'article</a>
                    </div>
                </article>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

<!-- Filtres et recherche -->
<section class="py-4 bg-white border-bottom">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <div class="d-flex gap-3 flex-wrap">
                    <div class="dropdown">
                        <button class="btn btn-outline-dark dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-funnel me-2"></i>Catégories
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Toutes les catégories</a></li>
                            <li><a class="dropdown-item" href="#">Innovation</a></li>
                            <li><a class="dropdown-item" href="#">Marché</a></li>
                            <li><a class="dropdown-item" href="#">Guide</a></li>
                            <li><a class="dropdown-item" href="#">Technologie</a></li>
                            <li><a class="dropdown-item" href="#">Test</a></li>
                        </ul>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-outline-dark dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-sort-down me-2"></i>Trier par
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Plus récent</a></li>
                            <li><a class="dropdown-item" href="#">Plus ancien</a></li>
                            <li><a class="dropdown-item" href="#">Plus populaire</a></li>
                            <li><a class="dropdown-item" href="#">Titre A-Z</a></li>
                        </ul>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-outline-dark dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-calendar me-2"></i>Période
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Toutes les périodes</a></li>
                            <li><a class="dropdown-item" href="#">Cette semaine</a></li>
                            <li><a class="dropdown-item" href="#">Ce mois</a></li>
                            <li><a class="dropdown-item" href="#">Cette année</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Rechercher un article...">
                    <button class="btn btn-dark" type="button">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Articles récents -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2 class="fw-bold mb-4">ARTICLES RÉCENTS</h2>
                <div class="row g-4">
                    {% for article in recentArticles %}
                    <div class="col-md-6">
                        <article class="card h-100 shadow-sm hover-shadow">
                            <div class="position-relative">
                                <img src="{{ article.image }}" class="card-img-top" alt="{{ article.title }}" style="height: 200px; object-fit: cover;">
                                <div class="position-absolute top-0 start-0 m-2">
                                    <span class="badge bg-primary">{{ article.category }}</span>
                                </div>
                                <div class="position-absolute top-0 end-0 m-2">
                                    <button class="btn btn-light btn-sm rounded-circle" title="Ajouter aux favoris">
                                        <i class="bi bi-heart"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h3 class="card-title h6 fw-bold mb-2">{{ article.title }}</h3>
                                <p class="card-text text-muted small flex-grow-1">{{ article.excerpt|slice(0, 100) }}...</p>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-person me-1"></i>{{ article.author }}
                                    </small>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar me-1"></i>{{ article.date|date('d/m/Y') }}
                                    </small>
                                </div>
                                <div class="mb-2">
                                    {% for tag in article.tags|slice(0, 2) %}
                                    <span class="badge bg-light text-dark me-1 small">{{ tag }}</span>
                                    {% endfor %}
                                </div>
                                <a href="{{ path('app_article_detail', {'id': article.id}) }}" class="btn btn-outline-dark btn-sm">Lire la suite</a>
                            </div>
                        </article>
                    </div>
                    {% endfor %}
                </div>
            </div>
            
            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="sticky-top" style="top: 100px;">
                    <!-- Newsletter -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-body text-center">
                            <i class="bi bi-envelope text-primary fs-1 mb-3"></i>
                            <h5 class="card-title fw-bold">Newsletter</h5>
                            <p class="card-text text-muted">Recevez nos dernières actualités directement dans votre boîte mail</p>
                            <form class="mb-3">
                                <div class="mb-3">
                                    <input type="email" class="form-control" placeholder="Votre adresse email">
                                </div>
                                <button type="submit" class="btn btn-dark w-100">S'abonner</button>
                            </form>
                            <small class="text-muted">Désabonnement possible à tout moment</small>
                        </div>
                    </div>

                    <!-- Articles populaires -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0 fw-bold">
                                <i class="bi bi-fire me-2"></i>Articles populaires
                            </h6>
                        </div>
                        <div class="card-body p-0">
                            {% for article in allArticles|slice(0, 5) %}
                            <div class="p-3 border-bottom">
                                <div class="d-flex">
                                    <img src="{{ article.image }}" class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;" alt="{{ article.title }}">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fw-bold small">{{ article.title|slice(0, 50) }}...</h6>
                                        <small class="text-muted">{{ article.date|date('d/m/Y') }}</small>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Tags populaires -->
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h6 class="mb-0 fw-bold">
                                <i class="bi bi-tags me-2"></i>Tags populaires
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="d-flex flex-wrap gap-2">
                                <span class="badge bg-primary">Tesla</span>
                                <span class="badge bg-secondary">Électrique</span>
                                <span class="badge bg-success">Innovation</span>
                                <span class="badge bg-info">Technologie</span>
                                <span class="badge bg-warning text-dark">Guide</span>
                                <span class="badge bg-danger">Test</span>
                                <span class="badge bg-dark">Marché</span>
                                <span class="badge bg-light text-dark">Fiscalité</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Pagination -->
<section class="py-4 bg-light">
    <div class="container">
        <nav aria-label="Navigation des articles">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</section>

{% endblock %}

