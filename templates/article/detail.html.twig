{% extends 'base.html.twig' %}

{% block title %}{{ article.title }} — Tesla Store{% endblock %}

{% block meta %}
    <meta name="description" content="{{ article.excerpt }}">
    <meta property="og:title" content="{{ article.title }} — Tesla Store">
    <meta property="og:description" content="{{ article.excerpt }}">
    <meta property="og:type" content="article">
    <meta property="og:image" content="{{ article.image }}">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}

{% block body %}
<h1 class="visually-hidden">{{ article.title }} — Tesla Store</h1>

<!-- Hero Section -->
<section class="position-relative py-5" style="min-height: 60vh; display: flex; align-items: center; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
    <div class="container position-relative" style="z-index: 2;">
        <div class="row align-items-center">
            <div class="col-12">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_home') }}" class="text-muted text-decoration-none">
                                <i class="bi bi-house me-1"></i>Accueil
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_articles') }}" class="text-muted text-decoration-none">Actualités</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">{{ article.category }}</li>
                    </ol>
                </nav>

                <!-- Article Header -->
                <div class="row align-items-center mb-5">
                    <div class="col-lg-8">
                        <h1 class="display-4 fw-bold text-dark mb-3">{{ article.title }}</h1>
                        <div class="d-flex align-items-center text-muted">
                            <i class="bi bi-person me-2"></i>
                            <span class="me-4">{{ article.author }}</span>
                            <i class="bi bi-calendar me-2"></i>
                            <span>{{ article.date|date('d/m/Y') }}</span>
                            <span class="mx-3">•</span>
                            <i class="bi bi-clock me-2"></i>
                            <span>{{ article.readingTime }} min de lecture</span>
                        </div>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        <div class="d-flex justify-content-lg-end gap-2 mb-3">
                            <button class="btn btn-outline-secondary btn-sm" title="Partager sur Facebook">
                                <i class="bi bi-facebook"></i>
                            </button>
                            <button class="btn btn-outline-secondary btn-sm" title="Partager sur Twitter">
                                <i class="bi bi-twitter"></i>
                            </button>
                            <button class="btn btn-outline-secondary btn-sm" title="Partager">
                                <i class="bi bi-share"></i>
                            </button>
                        </div>
                        <div class="text-muted small">
                            <i class="bi bi-eye me-1"></i>{{ article.views|number_format(0, ',', ' ') }} vues
                        </div>
                    </div>
                </div>

                <!-- Main Article Image -->
                <div class="text-center">
                    <img src="{{ article.image }}" class="img-fluid rounded shadow-lg" alt="{{ article.title }}" style="max-height: 500px; width: 100%; object-fit: cover;">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Article Content -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <article class="article-content">
                    <!-- Article Excerpt -->
                    <div class="lead text-muted mb-5 p-4 bg-light rounded">
                        <i class="bi bi-quote text-primary me-2"></i>
                        {{ article.excerpt }}
                    </div>

                    <!-- Article Body -->
                    <div class="article-body">
                        {{ article.content|raw }}
                    </div>

                    <!-- Tags -->
                    <div class="mt-5 pt-4 border-top">
                        <h6 class="fw-bold mb-3">Tags :</h6>
                        <div class="d-flex flex-wrap gap-2">
                            {% for tag in article.tags %}
                            <span class="badge bg-primary">{{ tag }}</span>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Social Sharing -->
                    <div class="mt-5 pt-4 border-top d-flex justify-content-between align-items-center">
                        <div class="d-flex gap-3">
                            <button class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-facebook me-2"></i>Partager
                            </button>
                            <button class="btn btn-outline-info btn-sm">
                                <i class="bi bi-twitter me-2"></i>Tweeter
                            </button>
                            <button class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-share me-2"></i>Partager
                            </button>
                        </div>
                        <a href="{{ path('app_articles') }}" class="btn btn-outline-dark">
                            <i class="bi bi-arrow-left me-2"></i>Retour aux actualités
                        </a>
                    </div>
                </article>
            </div>
        </div>
    </div>
</section>

