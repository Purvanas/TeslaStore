{% extends 'base.html.twig' %}

{% block title %}Véhicules d'occasion — Tesla Store{% endblock %}

{% block meta %}
    <meta name="description" content="Découvrez notre sélection de véhicules Tesla d'occasion. Modèles certifiés, garantis et prêts à rouler.">
    <meta property="og:title" content="Véhicules d'occasion — Tesla Store">
    <meta property="og:description" content="Découvrez notre sélection de véhicules Tesla d'occasion. Modèles certifiés, garantis et prêts à rouler.">
    <meta property="og:type" content="website">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}

{% block body %}
<h1 class="visually-hidden">Véhicules d'occasion Tesla Store</h1>

<!-- Hero Section -->
<section class="position-relative py-5" style="min-height: 60vh; display: flex; align-items: center; background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1522071820075-efceb689a497?ixlib=rb-4.0.3&auto=format&fit=crop&w=1950&q=80') center/cover fixed;">
    <div class="container position-relative" style="z-index: 2;">
        <div class="row align-items-center">
            <div class="col-lg-7 mb-4 mb-lg-0">
                <img src="https://images.unsplash.com/photo-1552581234-26160f608093?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80" class="img-fluid rounded shadow-lg" alt="Véhicules Tesla d'occasion">
            </div>
            <div class="col-lg-5 text-white">
                <p class="text-white-50 mb-2">Toutes nos marques</p>
                <h1 class="display-3 fw-bold mb-4 text-shadow">OCCASION</h1>
                <p class="lead text-shadow mb-4">
                    Découvrez notre sélection de véhicules Tesla d'occasion certifiés. Chaque véhicule est inspecté, garanti et prêt à vous accompagner dans votre transition vers l'électrique.
                </p>
                <div class="bg-dark p-4 rounded shadow-lg">
                    <h3 class="h5 text-white mb-0">UN SOUS TITRE ACCROCHEUR POUR LA PAGE OCCASION</h3>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <!-- Sidebar Filters -->
            <div class="col-lg-3 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title fw-bold mb-4">Recherche et filtres</h5>
                        
                        <!-- Search Bar -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Recherche</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Rechercher un véhicule...">
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Sort -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Trier par</label>
                            <select class="form-select">
                                <option>Prix croissant</option>
                                <option>Prix décroissant</option>
                                <option>Année récente</option>
                                <option>Kilométrage</option>
                                <option>Nom</option>
                            </select>
                        </div>

                        <!-- Filters -->
                        <div class="accordion" id="filtersAccordion">
                            <!-- Prix -->
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#priceFilter">
                                        <i class="bi bi-chevron-down me-2"></i>Prix
                                    </button>
                                </h2>
                                <div id="priceFilter" class="accordion-collapse collapse" data-bs-parent="#filtersAccordion">
                                    <div class="accordion-body">
                                        <div class="row g-2">
                                            <div class="col-6">
                                                <input type="number" class="form-control form-control-sm" placeholder="Min">
                                            </div>
                                            <div class="col-6">
                                                <input type="number" class="form-control form-control-sm" placeholder="Max">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Modèle -->
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#modelFilter">
                                        <i class="bi bi-chevron-down me-2"></i>Modèle
                                    </button>
                                </h2>
                                <div id="modelFilter" class="accordion-collapse collapse" data-bs-parent="#filtersAccordion">
                                    <div class="accordion-body">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="modelS">
                                            <label class="form-check-label" for="modelS">Model S</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="model3">
                                            <label class="form-check-label" for="model3">Model 3</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="modelX">
                                            <label class="form-check-label" for="modelX">Model X</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="modelY">
                                            <label class="form-check-label" for="modelY">Model Y</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Marque -->
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#brandFilter">
                                        <i class="bi bi-chevron-down me-2"></i>Marque
                                    </button>
                                </h2>
                                <div id="brandFilter" class="accordion-collapse collapse" data-bs-parent="#filtersAccordion">
                                    <div class="accordion-body">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="tesla" checked>
                                            <label class="form-check-label" for="tesla">Tesla</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Type -->
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#typeFilter">
                                        <i class="bi bi-chevron-down me-2"></i>Type
                                    </button>
                                </h2>
                                <div id="typeFilter" class="accordion-collapse collapse" data-bs-parent="#filtersAccordion">
                                    <div class="accordion-body">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="berline">
                                            <label class="form-check-label" for="berline">Berline</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="suv">
                                            <label class="form-check-label" for="suv">SUV</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Énergie -->
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#energyFilter">
                                        <i class="bi bi-chevron-down me-2"></i>Énergie
                                    </button>
                                </h2>
                                <div id="energyFilter" class="accordion-collapse collapse" data-bs-parent="#filtersAccordion">
                                    <div class="accordion-body">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="electrique" checked>
                                            <label class="form-check-label" for="electrique">Électrique</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Kilométrage -->
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#mileageFilter">
                                        <i class="bi bi-chevron-down me-2"></i>Kilométrage
                                    </button>
                                </h2>
                                <div id="mileageFilter" class="accordion-collapse collapse" data-bs-parent="#filtersAccordion">
                                    <div class="accordion-body">
                                        <div class="row g-2">
                                            <div class="col-6">
                                                <input type="number" class="form-control form-control-sm" placeholder="Min km">
                                            </div>
                                            <div class="col-6">
                                                <input type="number" class="form-control form-control-sm" placeholder="Max km">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Transmission -->
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#transmissionFilter">
                                        <i class="bi bi-chevron-down me-2"></i>Transmission
                                    </button>
                                </h2>
                                <div id="transmissionFilter" class="accordion-collapse collapse" data-bs-parent="#filtersAccordion">
                                    <div class="accordion-body">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="automatique" checked>
                                            <label class="form-check-label" for="automatique">Automatique</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Année -->
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#yearFilter">
                                        <i class="bi bi-chevron-down me-2"></i>Année
                                    </button>
                                </h2>
                                <div id="yearFilter" class="accordion-collapse collapse" data-bs-parent="#filtersAccordion">
                                    <div class="accordion-body">
                                        <div class="row g-2">
                                            <div class="col-6">
                                                <select class="form-select form-select-sm">
                                                    <option>2019</option>
                                                    <option>2020</option>
                                                    <option>2021</option>
                                                    <option>2022</option>
                                                    <option>2023</option>
                                                </select>
                                            </div>
                                            <div class="col-6">
                                                <select class="form-select form-select-sm">
                                                    <option>2023</option>
                                                    <option>2022</option>
                                                    <option>2021</option>
                                                    <option>2020</option>
                                                    <option>2019</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Concession -->
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#dealershipFilter">
                                        <i class="bi bi-chevron-down me-2"></i>Concession
                                    </button>
                                </h2>
                                <div id="dealershipFilter" class="accordion-collapse collapse" data-bs-parent="#filtersAccordion">
                                    <div class="accordion-body">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="paris">
                                            <label class="form-check-label" for="paris">Paris</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="lyon">
                                            <label class="form-check-label" for="lyon">Lyon</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="marseille">
                                            <label class="form-check-label" for="marseille">Marseille</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button class="btn btn-dark">Appliquer les filtres</button>
                            <button class="btn btn-outline-secondary">Réinitialiser</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-9">
                <!-- Filter Tags and Results -->
                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                    <div class="d-flex flex-wrap gap-2">
                        <span class="badge bg-secondary">Nouveauté</span>
                        <span class="badge bg-success">Petit prix</span>
                        <span class="badge bg-primary">Prix en baisse</span>
                        <span class="badge bg-warning text-dark">Rapide</span>
                    </div>
                    <div class="d-flex align-items-center gap-3">
                        <a href="#" class="text-decoration-none">
                            <i class="bi bi-bar-chart me-1"></i>Mon comparateur
                        </a>
                        <span class="text-muted">{{ totalResults }} résultats</span>
                    </div>
                </div>

                <!-- Products Grid -->
                <div class="row g-4">
                    {% for vehicle in vehicles %}
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 shadow-sm hover-shadow">
                            <div class="position-relative">
                                <img src="{{ vehicle.image }}" class="card-img-top" alt="{{ vehicle.name }}" style="height: 250px; object-fit: cover;">
                                <div class="position-absolute top-0 end-0 p-2">
                                    <div class="d-flex flex-column gap-1">
                                        {% if vehicle.isNew %}
                                            <span class="badge bg-success">Nouveauté</span>
                                        {% endif %}
                                        {% if vehicle.isLowPrice %}
                                            <span class="badge bg-warning text-dark">Petit prix</span>
                                        {% endif %}
                                        {% if vehicle.isPriceDrop %}
                                            <span class="badge bg-primary">Prix en baisse</span>
                                        {% endif %}
                                        {% if vehicle.isQuick %}
                                            <span class="badge bg-info">Rapide</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="position-absolute top-0 start-0 p-2">
                                    <div class="d-flex gap-1">
                                        <button class="btn btn-light btn-sm rounded-circle" title="Ajouter aux favoris">
                                            <i class="bi bi-heart"></i>
                                        </button>
                                        <a href="{{ path('app_product_detail', {'id': vehicle.id}) }}" class="btn btn-light btn-sm rounded-circle" title="Voir les détails">
                                            <i class="bi bi-search"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <span class="text-primary fw-bold">PRIX €</span>
                                    <span class="h5 text-dark mb-0">{{ vehicle.price|number_format(0, ',', ' ') }} €</span>
                                </div>
                                <h5 class="card-title">{{ vehicle.name }}</h5>
                                <div class="row g-2 mb-3">
                                    <div class="col-4">
                                        <small class="text-muted d-block">Année</small>
                                        <strong>{{ vehicle.year }}</strong>
                                    </div>
                                    <div class="col-4">
                                        <small class="text-muted d-block">Énergie</small>
                                        <strong>{{ vehicle.fuel }}</strong>
                                    </div>
                                    <div class="col-4">
                                        <small class="text-muted d-block">Kilométrage</small>
                                        <strong>{{ vehicle.mileage|number_format(0, ',', ' ') }} km</strong>
                                    </div>
                                </div>
                                <p class="card-text text-muted small flex-grow-1">{{ vehicle.description }}</p>
                                <a href="{{ path('app_product_detail', {'id': vehicle.id}) }}" class="btn btn-dark mt-auto hover-scale">EN SAVOIR PLUS</a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>

                <!-- Pagination -->
                <nav aria-label="Pagination des véhicules" class="mt-5">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Précédent</a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">Suivant</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>

{% endblock %}
